.header {
    width: 100%;
    display: flex;
    align-items: center;
    background-color: #fff;
    padding: 30rpx;
    margin-bottom: 20rpx;
}

.avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.login {
    width: 100%;
    text-align: center;
    background-color: #fff;
    padding: 80rpx 60rpx;
}

.login .icon {
    width: 350rpx;
    height: 243rpx;
    background-image: url("data:image/png;base64,");
    background-repeat: no-repeat;
    background-size: 100% 100%;
    margin: 0 auto;
}

.login .text {
    margin: 60rpx 0;
}

.login .tips {
    font-size: 30rpx;
    text-align: left;
    margin-top: 30rpx;
}

.login .tips .link {
    color: #4393F4;
    text-decoration: underline;
}